@model Vidly.ViewModels.AllCustomersViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Name</th>  
    </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
        <tr>
            <td>@customer.Name</td>
        </tr>
        }
    </tbody>
</table>

